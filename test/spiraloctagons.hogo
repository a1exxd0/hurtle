; octagon

setwidth 2
to bam :s :l :r :n :g :rp [
    make "col 1
    repeat :rp [
        make "col sum :col 1
        setcolor :col
        setwidth multiply :col 2
        right :r
        repeat :s [ 
            forward :l 
            right div 360 :s
        ] 
        make "l sum :l :n
        right :r 
        make "s sum :s :g
    ] 
] end

bam 8 200 3 5 0 35